// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch: ESBuild",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:esbuild",
                "--",
                "--watch"
            ],
            "problemMatcher": "$esbuild-watch",
            "presentation": {
                "reveal": "silent",
            },
            "group": {
                "kind": "build",
            },
            "isBackground": true,
        },
        {
            "label": "Watch: Check Types",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:check",
                "--",
                "--watch"
            ],
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "revealProblems": "onProblem",
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "isBackground": true,
        },
    ],
}
