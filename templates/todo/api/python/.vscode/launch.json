{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: FastAPI",
			"type": "python",
			"request": "launch",
			"module": "uvicorn",
            "cwd": "${workspaceFolder}/todo",
			"args": [
				"todo.app:app",
				"--reload"
			],
			"preLaunchTask": "Prepare API Debug",
            "postDebugTask": "Teardown API Env",
		},
		{
			"name": "Python: Pytest",
			"type": "python",
			"request": "launch",
			"module": "pytest",
            "cwd": "${workspaceFolder}/todo",
			"args": [
				"${workspaceFolder}/tests", 
                "-vv"
			],
		}
	]
}
